{% extends './base.njk' %}

{% block main %}
  <main class="page">
    <h1 class="page-title">
      {% if title and subtitle %}
        {{ title }}:
        {{ subtitle }}
      {% else %}
        {{ title }}
      {% endif %}
    </h1>

    {% block pagecontent %}
      {{ content | safe }}
    {% endblock pagecontent %}
  </main>
{% endblock main %}