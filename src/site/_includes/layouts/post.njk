{% extends './base.njk' %}

{% block meta %}
  {# Facebook Open Graph #}
  <meta property="og:type" content="website"/>
  <meta property="og:image" content="{{site.rootURI}}/images/meta-og.jpg"/>
  <meta property="og:site_name" content="{{site.name}}"/>
  <meta property="og:title" content="{{ completetitle }}"/>
  <meta property="og:description" content="{{ heading }}"/>
  <meta property="og:url" content="{{ site.rootURI }}{{ page.url }}"/>
  <meta property="article:published_time" content="{{ date | formatDate }}"/>
  {% for tag in tags %}
    <meta property="article:tag" content="{{tag}}"/>
  {% endfor %}
  {# Twitter Card #}
  <meta name="twitter:card" content="summary_large_image"/>
  {% if site.twitter %}
    <meta name="twitter:creator" content="@{{site.twitter}}"/>
  {% endif %}
  <meta name="twitter:image:src" content="{{site.rootURI}}/images/meta-image.png"/>
  <meta name="twitter:title" content="{{ completetitle }}"/>
  <meta name="twitter:description" content="{{ heading }}"/>
  <meta name="twitter:url" content="{{ site.rootURI }}{{ page.url }}"/>
  {# Schema.org JSON #}
  <script type="application/ld+json">
    {
      "@context": "http://schema.org",
      "@type": "Article",
      "url": "{{ site.rootURI }}{{ page.url }}",
      "description": "{{ heading }}",
      "headline": "{{ heading }}",
      "datePublished": "{{ date | formatDate }}",
      "dateModified": "{{ site.buildTime | formatDate }}",
      "license": "https://creativecommons.org/licenses/by/4.0/legalcode",
      "author": {
        "@type": "Person",
        "name": "{{ site.name }}",
        "url": "{{ site.rootURI }}",
        "description": "{{ site.description }}"
      },
      "publisher": {
        "@type": "Person",
        "name": "{{ site.name }}",
        "url": "{{ site.rootURI }}",
        "description": "{{ site.description }}"
      },
      "maintainer": {
        "@type": "Person",
        "name": "{{ site.name }}",
        "url": "{{ site.rootURI }}",
        "description": "{{ site.description }}"
      },
      "image": {
        "@type": "ImageObject",
        "url": "{{site.rootURI}}/images/meta-image.png}}",
        "width": "800 px",
        "height": "400 px"
      }
    }
  </script>
{% endblock meta %}

{% block main %}
  <main class="blog-entry">
    <header class="blog-header">
      <h1 class="blog-title">
        {{ title }}
        {% if subtitle %}
          <br/>
          <small class="blog-title__subtitle">
            {{ subtitle }}
          </small>
        {% endif %}
      </h1>
      {% if heading %}
        <p class="blog-heading">
          {{ heading | safe }}
        </p>
      {% endif %}
      <div class="blog-details">
        <div class="blog-details__date">
          <time class="hdate" datetime="{{ date | formatDate('yyyy-MM-dd') }}">
            <span class="hdate__weekday">{{ date | formatDate("cccc'-feira'") }}</span>,
            <span class="hdate__monthday">{{ date | formatDate("d") }}</span>
            de
            <span class="hdate__month">{{ date | formatDate("MMMM") }}</span>
            de
            <span class="hdate__year">{{ date | formatDate("yyyy") }}</span>
          </time>
        </div>
        <ul class="blog-details__tags">
          {% for tag in tags %}
            <li class="blog-details__tags__tag">
              <a href="/tags/{{tag}}" rel="tag">{{tag}}</a>
            </li>
          {% endfor %}
        </ul>
      </div>
    </header>

    <section class="blog-content">
      {{ content | safe }}
    </section>

    <footer class="personal personal--small">
      <div class="avatar avatar--small"></div>
      <h2 class="personal__name personal__name--small">Max Naegeler Roecker</h2>
      <p class="personal__bio personal__bio--small">Mestre em Ciência da Computação & Desenvolvedor de Software</p>
      <ul class="personal__links personal__links--small">
        {% if site.github %}
          <li>
            <a href="https://github.com/{{ site.github }}">
              <span class="fab fa-github-square"></span>
            </a>
          </li>
        {% endif %}
        {% if site.twitter %}
          <li>
            <a href="https://twitter.com/{{site.twitter}}">
              <span class="fab fa-twitter-square"></span>
            </a>
          </li>
        {% endif %}
        {% if site.linkedin %}
          <li>
            <a href="https://www.linkedin.com/in/{{site.linkedin}}">
              <span class="fab fa-linkedin"></span>
            </a>
          </li>
        {% endif %}
      </ul>
    </footer>
  </main>
{% endblock main %}